{
  "root": true,
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "no-unused-vars": ["error", { "args": "none" }],
    "prefer-const": "warn",
    "quotes": ["warn", "single", { "avoidEscape": true }]
  }
}
